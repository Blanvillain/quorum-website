use Libraries.Game.Game
use Libraries.Game.Graphics.Drawable
use Libraries.System.File

class Main is Game
    Drawable spaceship

    action Main
        StartGame()
    end

    action CreateGame
        //Load on website root
        File file
        file:SetWorkingDirectory("/") 
        file:SetPath("media/games/alien.png")
        spaceship:Load(file)

        //Add the spaceship
        Add(spaceship)

        spaceship:SetX(10)
        spaceship:SetY(5)
    end

    action Update(number seconds)
        //lower numbers for online
        number newX = spaceship:GetX() + 10 * seconds
        number newY = spaceship:GetY() + 5 * seconds
        spaceship:SetPosition(newX, newY)
    end
end