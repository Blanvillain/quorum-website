        cb12:Add(s22)
        cb12:AddText(   "    integer frame = 1" + cr + cr
                    +   "    action Main" + cr
                    +   "        StartGame()" + cr
                    +   "    end" + cr + cr
                    +   "    action CreateGame" + cr)
        s23:AddText(    "        //these line load the ImageSheet and initial frame into a drawable and add it to the game" + cr)
