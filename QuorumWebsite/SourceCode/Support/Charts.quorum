class Charts is Lesson
    text dq = ""
    dq = dq:GetDoubleQuote()
    text cr = ""
    cr = cr:GetCarriageReturn()

    Preformatter preformatter //helper
    // for unique canvas IDs
    integer idNum = 0

    action Setup
        LineBreak break //will be used multiple times
        
        AddDefaultHeaders()

        // The VersionHelper has up-to-date query strings for the source files.
        // The query strings don't modify the file at all, but will prevent the cache from returning an old version of the file.
        VersionHelper versions

        // add necessary scripts
        AddScript("/script/quorumCharts.js" + versions:GetChartsScriptVersionQuery())

        // add necessary styles
        AddStylesheet("/style/quorumCharts.css" + versions:GetChartsStyleVersionQuery())

        //html header stuff
        SetWebPageTitle("Quorum Charts Kitchen Sink Page")
        //Figure out getting main regions properly.
        MainContent mainRegion
        AdjustMain(mainRegion)

        //page header
        Header headDiv
        headDiv:SetClassAttribute("pageHeader outermostContainer")
        headDiv:AddHeading("Quorum Charts Kitchen Sink Page", 1)
        Add(headDiv)

        Division bodyDiv
        bodyDiv:SetClassAttribute("bodyContainer")
        
        //These are buttons to test vibrations
        bodyDiv:AddHeading("Vibration Test", 2)
        bodyDiv:AddText("This is a section to test a variety of vibrations")

        Division fiveSecondsDiv
        Button fiveSecondsButton
        fiveSecondsButton:AddText("On 5 Seconds")
        fiveSecondsButton:SetOnClick("window.navigator.vibrate(5000)")
        fiveSecondsDiv:Add(fiveSecondsButton)
        bodyDiv:Add(fiveSecondsDiv)

        Division pulseTestDiv
        Button pulseTestButton
        pulseTestButton:AddText("Pulse Test - Pattern 100ms on, 100ms off")
        pulseTestButton:SetOnClick("window.navigator.vibrate([100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100, 100])")
        pulseTestDiv:Add(pulseTestButton)
        bodyDiv:Add(pulseTestDiv)

        Division hertz2_5Div
        Button hertz2_5Button
        hertz2_5Button:AddText("2.5Hz - Pattern 200ms on, 200ms off")
        hertz2_5Button:SetOnClick("window.navigator.vibrate([200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200, 200])")
        hertz2_5Div:Add(hertz2_5Button)
        bodyDiv:Add(hertz2_5Div)

        Division hertz10Div
        Button hertz10Button
        hertz10Button:AddText("10Hz - Pattern 50ms on, 50ms off")
        hertz10Button:SetOnClick("window.navigator.vibrate([50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50, 50])")
        hertz10Div:Add(hertz10Button)
        bodyDiv:Add(hertz10Div)

        File f
        FileReader reader

        bodyDiv:AddHeading("Bar Charts", 2)
        bodyDiv:AddText("This is a section with examples of Bar Charts")
    
        bodyDiv:AddHeading("CSP - Unit 9 - Lesson 2 - App 1", 3)
        Division chart1
        chart1:SetStyle("min-width: 200px; max-width: 800px")
        f:SetPath("html/charts/csp_unit9_lesson2_app1.svg")
        reader:OpenForRead(f)
        chart1:AddText(reader:Read())
        reader:Close()
        
        bodyDiv:Add(chart1)

        bodyDiv:AddHeading("CSP - Unit 9 - Lesson 2 - App 2", 3)
        Division chart2
        chart2:SetStyle("min-width: 200px; max-width: 800px")
        f:SetPath("html/charts/csp_unit9_lesson2_app2.svg")
        reader:OpenForRead(f)
        chart2:AddText(reader:Read())
        reader:Close()
        
        bodyDiv:Add(chart2)

        bodyDiv:AddHeading("CSP - Unit 9 - Lesson 3 - App 1", 3)
        Division chart3
        chart3:SetStyle("min-width: 200px; max-width: 800px")
        f:SetPath("html/charts/csp_unit9_lesson3_app1.svg")
        reader:OpenForRead(f)
        chart3:AddText(reader:Read())
        reader:Close()
        
        bodyDiv:Add(chart3)

        bodyDiv:AddHeading("CSP - Unit 9 - Lesson 3 - App 2", 3)
        Division chart4
        chart4:SetStyle("min-width: 200px; max-width: 800px")
        f:SetPath("html/charts/csp_unit9_lesson3_app2.svg")
        reader:OpenForRead(f)
        chart4:AddText(reader:Read())
        reader:Close()
        
        bodyDiv:Add(chart4)

        bodyDiv:AddHeading("Scatter Plot 1", 3)
        Division chart5
        chart5:SetStyle("min-width: 200px; max-width: 800px")
        f:SetPath("html/charts/chance_of_weather_condition.svg")
        reader:OpenForRead(f)
        chart5:AddText(reader:Read())
        reader:Close()
        
        bodyDiv:Add(chart5)

        WriteNextTutorial(bodyDiv)
        mainRegion:Add(bodyDiv)
        Add(mainRegion)

    end

    action GetSummaryName returns text
        return ""
    end
    action GetName returns text
        return ""
    end
    action GetShortDescription returns text
        return ""
    end
    action GetLocation returns text
        return "charts/Example.html"
    end
end