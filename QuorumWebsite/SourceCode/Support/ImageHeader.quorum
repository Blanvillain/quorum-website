use Libraries.Web.Page.all
use Libraries.Containers.Array
use Libraries.Data.Formats.JavaScriptObjectNotation

class ImageHeader is Header
    action Create(text heading, text description, text imageUrl, text imageAltText) returns Header
        Header header
        header:AddClassAttribute("bg-quorum-blue-25 flex flex-row items-center justify-center py-10 w-full")
    
        // Quorum Icon and Text section
        Division leftText
        leftText:AddClassAttribute("flex flex-col") // Updated to flex-col and added gap and margin-right
    
        Heading quorumHeader
        quorumHeader:SetScale(1)
        quorumHeader:AddText(heading)
        quorumHeader:AddClassAttribute("text-2xl text-center font-bold font-sans")
        leftText:Add(quorumHeader)
    
        Paragraph p
        p:AddText(description)
        p:AddClassAttribute("w-72 font-light")
        leftText:Add(p)
    
        header:Add(leftText)
    
        // Bunny Image
        Division imageHolder
        imageHolder:AddClassAttribute("w-1/4 max-w-[200px]")
    
        Image bunny
        bunny:SetAddress(imageUrl)
        bunny:AddClassAttribute("w-full")
        bunny:SetAlternate(imageAltText)

        imageHolder:Add(bunny)
        
        header:Add(imageHolder)
    
        return header
    end
end

